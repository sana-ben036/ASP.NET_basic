@model IEnumerable<IdentityRole>

@{
    // Layout = "~/Views/Shared/_Layout.cshtml"; // absolut path need extension
    ViewBag.Title = "ManageStudent  | Roles";
}

<p class="alert alert-info my-4 text-center"> List of Roles </p>
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (IdentityRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>

                    <td>
                        <a asp-action="EditRole" asp-controller="Role"  asp-route-id="@role.Id">Edit</a> |
                        <a asp-action="DeleteRole" asp-controller="Role"  asp-route-id="@role.Id" onclick="return confirm('Are you sure ??')">Delete</a>
                    </td>
                </tr>

            }
        }

    </tbody>
</table>


