@model IEnumerable<IdentityRole>

@{
    // Layout = "~/Views/Shared/_Layout.cshtml"; // absolut path need extension
    ViewBag.Title = "ManageStudent  | Roles";
}

<p class="alert alert-info my-4 text-center"> List of Roles </p>


@if (Model.Any())
{
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (IdentityRole role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>

                        <td>
                            <a asp-action="EditRole" asp-controller="Role" asp-route-id="@role.Id">Edit</a> |
                            <a asp-action="DeleteRole" asp-controller="Role" asp-route-id="@role.Id" onclick="return confirm('Are you sure ??')">Delete</a>
                        </td>
                    </tr>

                }
            }

        </tbody>
    </table>

}
else
{
    <div class="my-5">
        <div class="card">
            <div class="card-header">
                No roles created yet

            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button bellow to create role
                </h5>
            </div>
        </div>
    </div>

}

<div class="my-5 text-center">
    <a class="btn btn-sm my-auto btn-success" asp-action="AddRole">Add Role</a>
    <a class="btn btn-sm my-auto btn-secondary" asp-action="index" asp-controller="student">Back to Home</a>
</div>



