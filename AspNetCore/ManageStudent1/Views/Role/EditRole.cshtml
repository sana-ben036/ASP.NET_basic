@model EditRoleViewModel

@{

    ViewBag.Title = "ManageStudent  | Edit Role";

}


<div class="row">
    <div class="col-md-12">
        <p class="alert alert-info my-4 text-center"> Edit Role details </p>

        <form class="mx-lg-auto w-50" method="post">
            <label asp-for="Id"></label>
            <input class="form-control" disabled asp-for="Id">

            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input class="form-control" asp-for="RoleName">
                <span asp-validation-for="RoleName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Update</button>
            </div>

            <div>
                <div class="card" style=" margin:auto">
                    <div class="card-body text-center">
                        <h5 class="card-title">List Users</h5>

                        @if (Model.Users.Count == 0)
                         {
                            <p class="card-text">Any Users</p>
                         }
                        else
                        {
                            <p class="card-text">
                                @foreach (string user in Model.Users)
                                {
                                    @user <br />
                                }
                            </p>
                        }
                        <div>
                            <a class="btn btn-sm btn-primary" asp-action="EditUsersRole" asp-route-RoleId="@Model.Id">Edit Users</a>
                            <a class="btn btn-sm my-auto btn-secondary" asp-action="Listroles">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text text-danger" asp-validation-summary="All"></div>
        </form>

    </div>
</div>


