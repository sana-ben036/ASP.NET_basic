<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- CSS only -->
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script href="~/lib/bootstrap/js/bootstrap.js" rel="stylesheet"></script>


    </environment>
    <environment include="Production,Staging">
        @*on peut utiliser exclude="Development" cad utiliser ce lien en tt les cas sauf le cas de devlpmt*@
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true">


    </environment>

</head>


<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark  mx-lg-auto ">
            <img asp-append-version="true" src="~/images/z.jpg" class="rounded-circle" width="60px" height="60px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="List" asp-controller="Student">Students</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="AddStudent" asp-controller="Student">Add Student</a>
                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Student"  method="post">
                    <input class="form-control mr-sm-2" type="search" placeholder="Enter Cin"  aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                </form>

            </div>

        </nav>

    </header>
    <section class="container">

        @RenderBody()

    </section>



</body>


</html>
