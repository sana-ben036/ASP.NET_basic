@model AccountLoginViewModel

@{

    ViewBag.Title = "ManageStudent  | Login";

}


<p class="alert alert-info my-4 text-center"> User Login </p>

<form class="mx-lg-auto w-50" asp-action="Login" asp-controller="Account" method="post">
    
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
        <span asp-validation-for="Password"  class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Remember"></label>
        <input class="custom-checkbox" asp-for="Remember">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="text text-danger" asp-validation-summary="All"></div>

</form>