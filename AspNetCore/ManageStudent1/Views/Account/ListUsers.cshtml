@model IEnumerable<AppUser>

@{
    int counter = 1;
    ViewBag.Title = "ManageStudent  | Users";
}

<p class="alert alert-info my-4 text-center"> List of Users </p>

<table id="UsersTable" class="table table-hover text-center">
    <thead class="alert-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(item => item.FirstName)</th>
            <th scope="col">@Html.DisplayNameFor(item => item.LastName)</th>
            <th scope="col">@Html.DisplayNameFor(item => item.Age)</th>
            <th scope="col">@Html.DisplayNameFor(item => item.Email)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser user in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Age</td>
                <td>@user.Email</td>

                <td>
                    <a asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id">Edit</a> |
                    <a asp-action="DeleteUser" asp-controller="Account" asp-route-id="@user.Id" onclick="return confirm('Are you sure ??')">Delete</a>
                </td>
            </tr>
            counter++;

        }


    </tbody>
</table>



<div class="my-5 text-center">
    <a class="btn btn-sm my-auto btn-success" asp-action="Register">Add User</a>
    <a class="btn btn-sm my-auto btn-secondary" asp-action="index" asp-controller="student">Back to Home</a>
</div>

@section DTListUsers{ 
        <script>
            $(document).ready(function () {
                $('#UsersTable').dataTable();
            });


        </script>


}




