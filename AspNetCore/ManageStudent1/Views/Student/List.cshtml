@using ManageStudent1.Models;
@model IEnumerable<Student>




<!DOCTYPE html>
<html>
<head>
    <title> Student page | List </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <header >
        <nav style="width:60% ; margin:auto" class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">ManageStudent</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/student/List">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/student/AddStudent">Add Student</a>
                    </li>
                    
                </ul>
                
            </div>
        </nav>

    </header>
    <section style="width:60% ; margin:auto; padding:5px" >
        <p> Student List </p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Cin</th>
                    <th scope="col">IsActive</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Filiére</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Student item in Model)
                    {
                        <tr>
                            <td>@item.CIN</td>
                            <td>@item.IsActive</td>
                            <td>@item.Prenom</td>
                            <td>@item.Nom</td>
                            <td>@item.Adresse</td>
                            <td>@item.Filiere</td>
                            <td>
                                @Html.ActionLink("Edit", "UpdateStudent", new { cin = item.CIN }) |
                                @Html.ActionLink("Delete", "DeleteStudent", new { cin = item.CIN })
                            </td>
                        </tr>

                    }
                }

            </tbody>
        </table>

    </section>
    
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>


</html>