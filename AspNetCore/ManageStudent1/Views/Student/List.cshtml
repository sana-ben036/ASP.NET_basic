@model IEnumerable<Student>

@{ 
   // Layout = "~/Views/Shared/_Layout.cshtml"; // absolut path need extension 
    ViewBag.Title = "ManageStudent  | List";
}

<p class="alert alert-info my-4 text-center"> List of students </p>
<table class="table table-hover text-center" >
    <thead>
        <tr>
            <th scope="col">Cin</th>
            <th scope="col">IsActive</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse</th>
            <th scope="col">Filiére</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Student item in Model)
            {
                <tr>
                    <td>@item.CIN</td>
                    <td>@item.IsActive</td>
                    <td>@item.Prenom</td>
                    <td>@item.Nom</td>
                    <td>@item.Adresse</td>
                    <td>@item.Filiere</td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateStudent", new { cin = item.CIN }) |
                        @Html.ActionLink("Delete", "DeleteStudent", new { cin = item.CIN })
                    </td>
                </tr>

            }
        }

    </tbody>
</table>

