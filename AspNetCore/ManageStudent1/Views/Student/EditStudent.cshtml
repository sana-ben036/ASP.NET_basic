@model Student

@{

    ViewBag.Title = "ManageStudent | Edit Student";
}


<div class="my-5 text-center">
    <h2> Edit student details</h2>
    <hr />
</div>

<form class="mx-lg-auto my-5 w-50" asp-action="EditStudent" asp-controller="Student" method="post">
    <input hidden asp-for="CIN">
    <div class="form-group">
        <label asp-for="Prenom"></label>
        <input type="text" class="form-control" asp-for="Prenom">
        <span asp-validation-for="Prenom" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nom"></label>
        <input type="text" class="form-control" asp-for="Nom">
        <span asp-validation-for="Nom" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adresse"></label>
        <input type="text" class="form-control" asp-for="Adresse">
    </div>
    <div class="form-group">
        <label asp-for="Filiere"></label>
        <select class="form-control custom-select"
                asp-for="Filiere"
                asp-items="Html.GetEnumSelectList<Filiere>()">
            <option value="">Choisir Filiére ...</option>
        </select>
        <span asp-validation-for="Filiere" class="small text-danger"></span>
    </div>
    <div class="form-group">
        @if (User.IsInRole("Student"))
        {
            <input type="checkbox" disabled class="form-check-input" asp-for="IsActive">
            <label class="form-check-label"  asp-for="IsActive"></label>
        }
        else
        {
            <input type="checkbox" class="form-check-input" asp-for="IsActive">
            <label class="form-check-label" asp-for="IsActive"></label>

        }

    </div>
    <button type="submit" class="btn btn-success">Edit Student</button>
</form>
