@model Student

@{
    ViewBag.Title = "ManageStudent | Search";
}

<p class="alert alert-info my-4 text-center"> Student Info </p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Cin</th>
            <th scope="col">IsActive</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse</th>
            <th scope="col">Filiére</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.CIN</td>
            <td>@Model.IsActive</td>
            <td>@Model.Prenom</td>
            <td>@Model.Nom</td>
            <td>@Model.Adresse</td>
            <td>@Model.Filiere</td>
            <td>
                <a asp-action="EditStudent" asp-controller="Student" asp-route-id="@Model.CIN">Edit</a> |
                <a asp-action="DeleteStudent" asp-controller="Student" asp-route-id="@Model.CIN" onclick="return confirm('Are you sure ??')">Delete</a>
            </td>
        </tr>

    </tbody>
</table>
